{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "generate": "pnpm --filter @repo/db run db:generate",
    "db:migrate": "pnpm --filter @repo/db run db:migrate",
    "db:deploy": "turbo db:deploy",
    "db:seed": "pnpm --filter @repo/db run db:seed",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "db:generate": "turbo db:generate",
    "build:deploy": "pnpm db:generate && pnpm db:deploy && turbo build"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "turbo": "^2.5.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "engines": {
    "node": ">=20"
  }
}
